

<div class="card mb-4">
{% if property.fileName %}
	<img src="{{ vich_uploader_asset(property, 'imageFile') | imagine_filter('thumb')}}" alt="card-img-top" style="width: 100%; height:auto;">
{% else %}
	<img src="{{ '/images/properties/imageVide.jpg' | imagine_filter('thumb')}}" alt="card-img-top" style="width: 100%; height:auto;">
{% endif %}
	<div class="card-body">
		<h5 class="card-title">
			<a href="{{ path ('property.show', {slug: property.slug, id: property.id } )}}">
				{{ property.title }}
			</a>
		</h5>
		{# <p class="card-text">{{ property.description | nl2br }}
		</p> #}
		<p class="class-text">{{ property.surface }}m² {{ property.city }}
			({{property.postalCode}})</p>
		<div class="div text-primary" style ="font-size:2rem; font-weight:blod"> {{ property.formattedPrice}} €</div>
	</div>
</div>
